# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Login
GET		/auth/login 	               controllers.Authentication.login
POST    /auth/login                    controllers.Authentication.doLogin
POST    /auth/logout                   controllers.Authentication.doLogout
GET     /auth/currentUser controllers.Application.currentAuthenticatedUser

# Tasks
POST    /tasks/                        controllers.Tasks.createTask()
POST    /tasks/reprioritizeTask        controllers.Tasks.reprioritizeTask()
POST    /tasks/startPomodoro           controllers.Tasks.startPomodoro()
POST    /tasks/endPomodoro             controllers.Tasks.endPomodoro()
POST    /tasks/interruptPomodoro       controllers.Tasks.interrupt()
POST    /tasks/breakPomodoro           controllers.Tasks.break()
POST    /tasks/completeTask            controllers.Tasks.complete()
POST    /tasks/:id/extendEstimate      controllers.Tasks.extendEstimate(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.at(path="/public", file)
GET     /$file<crossdomain.xml>                 controllers.Assets.at(path="/public", file)

# Home page
GET     /                        controllers.Application.index(section = "")
GET     /*section               controllers.Application.index(section)
