# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /               controllers.Application.index

# Login
GET		/auth/login 	               controllers.Authentication.login
POST    /auth/login                    controllers.Authentication.doLogin
POST    /auth/logout                   controllers.Authentication.doLogout
GET     /auth/currentUser controllers.Application.currentAuthenticatedUser

# Tasks
GET     /tasks/                        controllers.Tasks.listTasks
GET     /tasks/byId/:id                controllers.Tasks.getTask(id)
POST    /tasks/byId/:id/done           controllers.Tasks.done(id)
POST    /tasks/byId/:id/interrupt      controllers.Tasks.interrupt(id)
POST    /tasks/byId/:id/extendEstimate controllers.Tasks.extendEstimate(id)
GET     /tasks/create                  controllers.Tasks.createTask
POST    /tasks/create                  controllers.Tasks.doCreateTask

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.at(path="/public", file)
